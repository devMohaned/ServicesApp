<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical">


    <LinearLayout style="@style/horz_linear_layout">

        <androidx.cardview.widget.CardView
            android:id="@+id/intent_serv"
            style="@style/cardview"
            app:cardBackgroundColor="@color/colorPrimaryDark"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <TextView
                style="@style/textview"
                android:text="Intent Service" />


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/intent_alarm"
            style="@style/cardview"
            app:cardBackgroundColor="@color/colorPrimaryDark"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <TextView
                style="@style/textview"
                android:text="Alarm Manager" />

        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <LinearLayout style="@style/horz_linear_layout">

        <androidx.cardview.widget.CardView
            android:id="@+id/music_nfev"
            style="@style/cardview"
            app:cardBackgroundColor="@color/colorPrimaryDark"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <TextView
                style="@style/textview"
                android:text="Music Service (Not Forever)" />


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/music_fev"
            style="@style/cardview"
            app:cardBackgroundColor="@color/colorPrimaryDark"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <TextView
                style="@style/textview"
                android:text="Music Service (Forever)" />

        </androidx.cardview.widget.CardView>


    </LinearLayout>


</LinearLayout>